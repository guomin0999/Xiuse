    <item android:state_enabled="false">
        <shape>
            <corners android:radius="4dp" />
            <solid android:color="#99F43847" />
        </shape>
    </item>
    <item>
        <shape>
            <corners android:radius="4dp" />
            <solid android:color="#F43847" />
        </shape>
    </item>
</selector>